<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.nmt.nmj.editor.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="NMJ Editor Perspective"
            class="com.nmt.nmj.editor.perspective.Perspective"
            id="com.nmt.nmj.editor.plugin.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.nmt.nmj.editor.view.EditorView"
            id="com.nmt.nmj.editor.editorView"
            name="Editor View"
            restorable="true">
      </view>
   </extension>

</plugin>
